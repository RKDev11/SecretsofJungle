<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loadView"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonGo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="#E6A55E"
            android:text="Go"
            android:textColor="#3A512A"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="211dp"
            tools:layout_editor_absoluteY="474dp" />

        <Button
            android:id="@+id/buttonRules"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="#E6A55E"
            android:text="Rules of the game"
            android:textColor="#3A512A"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="571dp" />

        <Button
            android:id="@+id/buttonPr"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="#E6A55E"
            android:text="Privacy Policy"
            android:textColor="#3A512A"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="197dp" />

        <Button
            android:id="@+id/buttonEx"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="#E6A55E"
            android:text="Exit the game"
            android:textColor="#3A512A"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="571dp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>